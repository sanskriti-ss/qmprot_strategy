# VQE Framework Configuration
# Copy this file to .env and customize

# ============================================
# PATHS
# ============================================
# Path to Hamiltonian files directory
HAMILTONIANS_DIR=./data/hamiltonians

# Path to molecule metadata JSON
MOLECULES_JSON=./data/qmprot.json

# Path to save results
RESULTS_DIR=./results

# Path to save plots
PLOTS_DIR=./plots

# ============================================
# VQE SETTINGS
# ============================================
# Default optimizer: COBYLA, L-BFGS-B, SLSQP, SPSA
DEFAULT_OPTIMIZER=COBYLA

# Maximum iterations for optimization
MAX_ITERATIONS=1000

# Convergence threshold
CONVERGENCE_THRESHOLD=1e-6

# Number of shots for quantum simulation (0 for statevector)
N_SHOTS=0

# Random seed for reproducibility
RANDOM_SEED=42

# ============================================
# SIMULATION BACKEND
# ============================================
# Backend: pennylane, qiskit, statevector
BACKEND=pennylane

# Device for PennyLane: default.qubit, lightning.qubit
PENNYLANE_DEVICE=default.qubit

# Qiskit backend: aer_simulator, aer_simulator_statevector
QISKIT_BACKEND=aer_simulator_statevector

# ============================================
# PLOTTING
# ============================================
# Default plot format: png, pdf, svg
PLOT_FORMAT=png

# DPI for plots
PLOT_DPI=150

# Color scheme: default, colorblind, dark
COLOR_SCHEME=default

# ============================================
# LOGGING
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (empty for stdout only)
LOG_FILE=./logs/vqe_framework.log

# ============================================
# PARALLEL EXECUTION
# ============================================
# Number of parallel workers (-1 for all CPUs)
N_WORKERS=1

# Enable multiprocessing
ENABLE_MULTIPROCESSING=false
